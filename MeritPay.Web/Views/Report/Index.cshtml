
@{
    ViewData["Title"] = "کارنامه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    td {
        border-style: solid;
        border-color: darkgray;
        border-width: 1px;
        border-spacing: 0px;
        padding: 3px;
        text-align:center;
    }
</style>

<script src="~/js/InitView/Report.js?v=1"></script>
<script src="~/js/ViewModel/Report.js?v=1"></script>
<script type="text/javascript">
    var viewModel;
    $(function () {
        viewModel = initVm({
            getDataReportUrl: '@Url.Action("GetReportData", "Report")',
        });
        kendo.bind($("#container"), viewModel);
        initView(viewModel);
    });
</script>
<form id="frm">
    <div id="container">
        <div d-wrp="کارنامه ارزیابی پرسنل" class="x4 k-rtl">
            <div style="padding:15px;">

                <table style="border-spacing:0px;width:100%">
                    <tr>
                        <td colspan="7" style="font-weight:bold;background-color:lightsteelblue;text-align:center">مشخصات فردی</td>
                    </tr>
                    <tr>
                        <td>شماره پرسنلی</td>
                        <td>
                            <span data-bind="text: personCode"></span>
                        </td>
                        <td>کد شعبه</td>
                        <td colspan="4">
                            <span data-bind="text: branchCode"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>نام</td>
                        <td>
                            <span data-bind="text: firstName"></span>
                        </td>
                        <td>نام شعبه</td>
                        <td colspan="4">
                            <span data-bind="text: branchName"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>نام خانوادگی</td>
                        <td>
                            <span data-bind="text: lastName"></span>
                        </td>
                        <td>منطقه</td>
                        <td colspan="4">
                            <span data-bind="text: zoneName"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>سمت</td>
                        <td>
                            <span data-bind="text: studyJob"></span>
                        </td>
                        <td>ارزیاب 1</td>
                        <td colspan="4">
                            <span data-bind="text: arzyab1"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>مقطع ارزشیابی</td>
                        <td>
                            <span data-bind="text: maghtaArzeshyabi"></span>
                        </td>
                        <td>ارزیاب 2</td>
                        <td colspan="4">
                            <span data-bind="text: arzyab2"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>تاریخ تولد</td>
                        <td>
                            <span data-bind="text: birthDate"></span>
                        </td>
                        <td>آخرین مقطع تحصیلی</td>
                        <td colspan="4">
                            <span data-bind="text: grade"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>تاریخ استخدام</td>
                        <td>
                            <span data-bind="text: employeeDate"></span>
                        </td>
                        <td>آخرین رشته تحصیلی</td>
                        <td colspan="4">
                            <span data-bind="text: studyBranch"></span>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="7" style="font-weight:bold;background-color:lightsteelblue;text-align:center">تراکنش های عملکردی</td>
                    </tr>


                    <tr style="background-color:aliceblue;text-align:center">
                        <td style="width:20%">شاخص</td>
                        <td style="width:20%">زیر شاخص</td>
                        <td style="width:20%">عملکرد</td>
                        <td style="width:10%">امتیاز</td>
                        <td style="width:10%">رتبه در شعبه</td>
                        <td style="width:10%">رتبه در منطقه</td>
                        <td style="width:10%">رتبه در بانک</td>
                    </tr>

                    <tr>
                        <td style="border-style:solid;border-width:0px; padding:0px" colspan="7" data-bind="html: htmlTest"></td>
                    </tr>

                    <tr>
                        <td colspan="3" style="font-weight:bold;background-color:lightsteelblue;text-align:center">امتیاز تراکنش عملکردی</td>
                        <td><span data-bind="text: taScore"></span></td>
                        <td><span data-bind="text: taRankInBranch"></span></td>
                        <td><span data-bind="text: taRankInZone"></span></td>
                        <td><span data-bind="text: taRankInBank"></span></td>
                    </tr>
                    <tr>
                        <td colspan="3" style="font-weight:bold;background-color:lightsteelblue;text-align:center">امتیاز گروهی شعبه</td>
                        <td><span data-bind="text: GroupScore"></span></td>
                        <td><span data-bind="text: GroupRankInBranch"></span></td>
                        <td><span data-bind="text: GroupRankInZone"></span></td>
                        <td><span data-bind="text: GroupRankInBank"></span></td>
                    </tr>
                    <tr>
                        <td colspan="3" style="font-weight:bold;background-color:lightsteelblue;text-align:center">ارزشیابی فردی</td>
                        <td><span data-bind="text: ArzeshScore"></span></td>
                        <td><span data-bind="text: ArzeshRankInBranch"></span></td>
                        <td><span data-bind="text: ArzeshRankInZone"></span></td>
                        <td><span data-bind="text: ArzeshRankInBank"></span></td>
                    </tr>
                    <tr>
                        <td colspan="3" style="font-weight:bold;background-color:lightsteelblue;text-align:center">امتیاز نهایی پرسنل</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>

                </table>
            </div>
        </div>
    </div>
</form>